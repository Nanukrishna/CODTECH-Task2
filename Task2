import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class StudentGradeManager {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to Student Grade Manager");

        System.out.print("Enter student name: ");
        String studentName = scanner.nextLine();

        System.out.print("Enter number of subjects or assignments: ");
        int numSubjects = scanner.nextInt();
        scanner.nextLine(); // Consume newline character

        List<String> subjects = new ArrayList<>();
        List<Double> grades = new ArrayList<>();

        for (int i = 0; i < numSubjects; i++) {
            System.out.print("Enter subject or assignment name " + (i + 1) + ": ");
            String subject = scanner.nextLine();
            subjects.add(subject);

            System.out.print("Enter grade for " + subject + ": ");
            double grade = scanner.nextDouble();
            grades.add(grade);

            scanner.nextLine(); // Consume newline character
        }

        // Calculate average grade
        double totalGrade = 0;
        for (double grade : grades) {
            totalGrade += grade;
        }
        double averageGrade = totalGrade / numSubjects;

        // Determine letter grade based on average
        String letterGrade = calculateLetterGrade(averageGrade);

        // Display results
        System.out.println("\nStudent Name: " + studentName);
        System.out.println("Subject/Assignment\tGrade");
        System.out.println("----------------------------");
        for (int i = 0; i < numSubjects; i++) {
            System.out.println(subjects.get(i) + "\t\t\t" + grades.get(i));
        }
        System.out.println("\nAverage Grade: " + averageGrade);
        System.out.println("Letter Grade: " + letterGrade);

        scanner.close();
    }

    private static String calculateLetterGrade(double averageGrade) {
        if (averageGrade >= 90) {
            return "A";
        } else if (averageGrade >= 80) {
            return "B";
        } else if (averageGrade >= 70) {
            return "C";
        } else if (averageGrade >= 60) {
            return "D";
        } else {
            return "F";
        }
    }
}
